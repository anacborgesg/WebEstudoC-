@using WebEstudo.Models.Enum
@model WebEstudo.Models.Sale

@{
    ViewData["Title"] = "Adicionar venda";
}

<div class="text-center">

    <h1 class="display-4">Adicionar venda</h1>
    <br />
</div>
<form class="row g-3" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ClientId" class="control-label"></label>
            <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            <select asp-for="Category" class="form-control">
                <option value="0">Selecione a categoria desejada</option>
                <option value="@EnumProd.Acessorio">Acessórios</option>
                <option value="@EnumProd.Calcados">Calçados</option>
                <option value="@EnumProd.Roupa">Roupas</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="NameProduct" class="control-label"></label>
            <input asp-for="NameProduct" class="form-control" />
            <span asp-validation-for="NameProduct" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="SaleValue" class="control-label"></label>
            <input asp-for="SaleValue" class="form-control" />
            <span asp-validation-for="SaleValue" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="DateOfSale" class="control-label"></label>
            <input asp-for="DateOfSale" class="form-control" />
            <span asp-validation-for="DateOfSale" class="text-danger"></span>
        </div>
    </div>
    <br/>
    <div class="col-md-6">
        <div class="form-group">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="d-grid gap-2 col-6 mx-auto">
            <input type="submit" class="btn btn-success" role="button" asp-action="Create" />
        </div>
    </div>
</form>
<br />
<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-secondary" role="button" asp-action="Index">Voltar para a lista de vendas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
