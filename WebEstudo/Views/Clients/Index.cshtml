@model IEnumerable<WebEstudo.Models.Client>

@{
    ViewData["Title"] = "Listagem de clientes";
}
<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-action="Create">Adicionar novo cliente</a>
    </div>
    <br />

    @if (TempData["MessageSucess"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MessageSucess"]
        </div>
    }
    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MessageError"]
        </div>
    }
    <br />
    <h1 class="display-4">Lista de Clientes</h1>


    <table class="display" id="table-clients" style="width:100%">
        <br />
        <thead class="table-primary">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.FullName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.BirthDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.TypeDoc)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DateRegister)</th>
                <th scope="col">Ações</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.TypeDoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateRegister)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum cliente encontrado</td></tr>
            }
        </tbody>
    </table>
</div>

